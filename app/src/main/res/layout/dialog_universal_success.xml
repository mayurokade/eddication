<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center">

    <LinearLayout
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/material_green_500"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp">

            <com.ssb.apps.bookapp.views.MaterialDesignIconsTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="@string/material_icon_check"
                android:textColor="@android:color/white"
                android:textSize="48dp" />

            <com.ssb.apps.bookapp.views.RobotoTextView
                android:id="@+id/dialog_universal_success_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Success"
                android:textColor="@color/white"
                android:textSize="24sp"
                app:typeface="robotoBlack" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="26dp"
            android:paddingTop="22dp"
            android:paddingRight="26dp"
            android:paddingBottom="22dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.ssb.apps.bookapp.views.RobotoTextView
                    android:id="@+id/dialog_universal_info_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="SongName"
                    android:textColor="@color/main_color_600"
                    android:textSize="24sp"
                    android:visibility="gone"
                    app:typeface="robotoRegular" />

                <com.ssb.apps.bookapp.views.RobotoTextView
                    android:id="@+id/dialog_universal_info_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:maxLines="4"
                    android:textColor="@color/main_color_grey_600"
                    android:textSize="16sp"
                    app:typeface="robotoRegular" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="22dp"
            android:background="@color/main_color_grey_100" />

        <com.ssb.apps.bookapp.views.MaterialRippleLayout
            style="@style/RippleStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.ssb.apps.bookapp.views.RobotoTextView
                android:id="@+id/dialog_universal_info_ok"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_background_success"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="@string/str_ok"
                android:textColor="@color/material_green_500"
                android:textSize="14sp"
                app:typeface="robotoRegular" />
        </com.ssb.apps.bookapp.views.MaterialRippleLayout>
    </LinearLayout>

</RelativeLayout>