<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    android:layout_width="match_parent"
    android:layout_marginTop="@dimen/dp20"
    android:layout_height="@dimen/dp200"
    android:gravity="center">

    <ImageView
        android:id="@+id/iv_user_profile"
        android:padding="@dimen/dp5"
        android:layout_width="@dimen/dp100"
        app:srcCompat="@drawable/ic_profile"
        android:layout_margin="@dimen/dp5"
        android:scaleType="fitXY"
        android:layout_centerVertical="true"
        android:layout_height="@dimen/dp80"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/iv_user_profile"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:text="@string/str_welcome_"
            android:textColor="@color/black"
            app:fontFamily="@font/sourcesanspro_bold"
            android:textStyle="bold"
            android:textSize="@dimen/t14sp"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="match_parent"
            app:fontFamily="@font/sourcesanspro_bold"
            android:id="@+id/et_user_name"
            android:textStyle="bold"
            android:text="@string/str_user_name"
            android:maxLines="1"
            android:paddingRight="@dimen/dp5"
            android:textColor="@color/black"
            android:textSize="@dimen/t18sp"
            android:layout_height="wrap_content"/>

    </LinearLayout>


</LinearLayout>