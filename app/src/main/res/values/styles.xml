<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>AppBarOverlay
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemeDialog" parent="Theme.AppCompat.Light.Dialog">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>
        <!-- <item name="android:popupMenuStyle">@style/PopupMenu</item>-->
        <item name="android:typeface">serif</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:typeface">serif</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">

    </style>

    <style name="SourceSansProTextAppearanceBold">
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/sourcesanspro_bold</item>
        <item name="android:textSize">@dimen/t18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" ></style>

    <!-- Dialog related styles end here -->
    <style name="CustomDialogTheme" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>


    <style name="RippleStyle">
        <item name="rippleOverlay">true</item>
        <item name="rippleColor">@color/material_gray_300</item>
        <item name="rippleAlpha">0.7</item>
        <item name="rippleDimension">45dp</item>
        <item name="rippleHover">true</item>
        <item name="rippleDuration">200</item>
        <item name="rippleFadeDuration">50</item>
        <item name="rippleBackground">@android:color/transparent</item>
        <item name="rippleDelayClick">true</item>
        <item name="ripplePersistent">false</item>
        <item name="rippleInAdapter">false</item>
    </style>

    <style name="NavigationView" parent="Base.Theme.AppCompat">
        <item name="android:listDivider">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/t16sp</item>

        <item name="android:listPreferredItemHeightSmall">@dimen/dp35
        </item><!-- menu item height-->
        <item name="android:textColorSecondary">@color/black</item>
        <!--<item name="android:textColorSecondary">#5792A6</item>-->
        <item name="android:itemPadding">@dimen/dp20</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/sourcesanspro_regular
        </item>

    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/black</item>
    </style>

    <style name="dialog_animation">
        <item name="android:windowEnterAnimation">@anim/anim_slide_in_left</item> <!--dialog slide from left -->
        <item name="android:windowExitAnimation">@anim/anim_slide_out_left</item><!--dialog close with right move-->
    </style>
</resources>
